{
  "name": "slides",
  "version": "1.0.0",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "marp -s -c marp.config.js",
    "build:html": "marp --html --output slides/slide.html slides/slide.md",
    "build:pdf": "marp --pdf --output slides/slide.pdf slides/slide.md",
    "build:pptx": "marp --pptx --output slides/slide.pptx slides/slide.md",
    "build:all": "npm run build:html && npm run build:pdf && npm run build:pptx",
    "preview": "marp slides/slide.md --server --watch",
    "publish": "marp --html --output index.html slides/slide.md --allow-local-files && sed -i '' 's|src=\"./img/|src=\"./slides/img/|g' index.html"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@kazumatu981/markdown-it-kroki": "github:kazumatu981/markdown-it-kroki",
    "@marp-team/marp-cli": "^4.2.0"
  }
}
